<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangel_item"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="标题"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="标题标题标题标题标题标题标题" />
            <Button
                android:id="@+id/tag_1"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:background="@drawable/corners_blue_bg"
                android:text="已上报"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textSize="12sp" />
            <Button
                android:id="@+id/tag_2"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:background="@drawable/corners_red_bg"
                android:text="未处理"
                android:textColor="@color/white"
                android:textSize="12sp" />
            <Button
                android:id="@+id/tag_3"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:background="@drawable/corners_primary_bg"
                android:text="已处理"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_reason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/icon_category"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@android:color/background_dark"
                android:textSize="14sp"
                tools:text="燃气" />

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/icon_level"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="15566668888"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp"
                tools:text="高级" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_customer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/icon_customer"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="网上那"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp"
                tools:text="枉少年" />

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/icon_mobile"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="15566668888"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp"
                tools:text="15566668888" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@mipmap/icon_list_1"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="国际创新园"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp"
                tools:text="国际创新园" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/icon_time"
            android:drawablePadding="10dp"
            android:text="@string/app_name"
            android:textSize="12sp"
            tools:text="2016-08-8 10:30:10" />

        <Button
            android:id="@+id/tv_btn"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/corners_green_bg"
            android:text="查看详情"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>
