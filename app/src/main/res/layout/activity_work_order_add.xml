<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".views.workorder.WorkOrderAddActivity">
    <ScrollView
        android:id="@+id/activity_rootview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/w_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提报人"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/blue"
                    android:textSize="12dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/tag_handled"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/btn_status_issued"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:backgroundTint="@null"
                        android:text="@string/handled"
                        android:textColor="@color/status_issued"
                        android:textSize="12sp"
                        android:visibility="gone" />
                    <Button
                        android:id="@+id/tag_unhandle"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:backgroundTint="@null"
                        android:background="@drawable/btn_status_record"
                        android:text="@string/unhandle"
                        android:textColor="@color/status_record"
                        android:textSize="12sp" />
                    <Button
                        android:id="@+id/tag_closed"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:backgroundTint="@null"
                        android:background="@drawable/btn_status_close"
                        android:text="@string/closed"
                        android:textColor="@color/status_closed"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorBorder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="85dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:text="编号：">
                </TextView>
                <TextView
                    android:id="@+id/w_code"
                    android:layout_width="0.0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text=""
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="85dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:text="工单来源：">
                </TextView>
                <TextView
                    android:id="@+id/w_source"
                    android:layout_width="0.0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text=""
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="85dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:text="维修人：">
                </TextView>
                <TextView
                    android:id="@+id/w_worker"
                    android:layout_width="0.0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text=""
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="85dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:text="维修时间：">
                </TextView>
                <TextView
                    android:id="@+id/w_order_time"
                    android:layout_width="0.0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text=""
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="85dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:text="提报时间：">
                </TextView>
                <TextView
                    android:id="@+id/w_report_time"
                    android:layout_width="0.0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text=""
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="85dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:text="报修人电话：">
                </TextView>
                <TextView
                    android:id="@+id/w_reporter_mobile"
                    android:layout_width="0.0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text=""
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="85dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:text="报修地点：">
                </TextView>
                <TextView
                    android:id="@+id/w_addr"
                    android:layout_width="0.0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text=""
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="85dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:text="报修内容：">
                </TextView>
                <TextView
                    android:id="@+id/w_const"
                    android:layout_width="0.0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text=""
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorBorder"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:textSize="18dp"
                    android:layout_height="wrap_content"

                    android:text="维修记录">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="85dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:text="维修内容：">
                </TextView>
                <EditText
                    android:id="@+id/textarea"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rectangel_item"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:hint="请输入"
                    android:lines="3"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_work_cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" >
                <org.apmem.tools.layouts.FlowLayout
                    android:id="@+id/flowlayout"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="20dip"
                    android:paddingTop="20dip"
                    android:paddingRight="20dip"
                    android:paddingBottom="20dip"
                    android:orientation="horizontal"
                    android:background="@drawable/rectangel_item">

                    <LinearLayout
                        android:id="@+id/upload"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/dashed_bg"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:contentDescription="@android:string/unknownName"
                            android:scaleType="fitXY"
                            app:srcCompat="@mipmap/icon_pic" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="上传凭证"
                            android:textColor="@color/gray"
                            android:textSize="10dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="(最多6张)"
                            android:textColor="@color/gray"
                            android:textSize="10dp" />
                    </LinearLayout>
                </org.apmem.tools.layouts.FlowLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_submit"
                    android:layout_gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:textColor="@color/white"
                    android:background="@drawable/corners_blue_bg"
                    android:text="@string/submit" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>