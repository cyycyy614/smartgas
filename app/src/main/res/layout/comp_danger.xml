<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_checkbox_need"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_marginTop="0dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/layout_method"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/label_method"
            android:layout_width="85dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            app:prefix="*"
            android:text="整改方式：">
        </TextView>
        <TextView
            android:id="@+id/text_method"
            android:layout_width="0.0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="请选择"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_isreport"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/label_isreport"
            android:layout_width="85dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            app:prefix="*"
            android:text="是否上报：">
        </TextView>
        <TextView
            android:id="@+id/select_report"
            android:layout_width="0.0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="请选择"
            android:drawableRight="@mipmap/icon_arrow"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

</LinearLayout>